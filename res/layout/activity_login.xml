<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FF9933"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".LoginActivity" >

    <TextView
        android:id="@+id/textViewfilepath1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="Login !"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <EditText
        android:id="@+id/LogEditText01"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textViewfilepath1"
        android:layout_below="@+id/textViewfilepath1"
        android:layout_marginTop="18dp"
        android:ems="10"
        android:hint="Email Id" >

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/logeditText2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textViewfilepath1"
        android:layout_below="@+id/LogEditText01"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/buttonloguser1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/logeditText2"
        android:layout_alignRight="@+id/logeditText2"
        android:layout_below="@+id/logeditText2"
        android:layout_marginTop="21dp"
        android:text="Login" />

    <Button
        android:id="@+id/buttonLogBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/buttonloguser1"
        android:layout_alignRight="@+id/buttonloguser1"
        android:layout_centerVertical="true"
        android:text="Back" />

</RelativeLayout>